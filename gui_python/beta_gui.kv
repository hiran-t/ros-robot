
<FloatLayout>:
    orientation: 'vertical'
    myslider: slider

    Slider:
        id: slider
        min: -180
        max: 180
        value: 0
        hint: True
        size_hint: 0.3, 0.3
        pos_hint: {"center_x": 0.15, "center_y": 0.9}
        on_value_normalized: app.slider_function_link1([0,self.value])
        
    Label
        text: ''
        text: 'JOINT OF DEGREE LINK1: {}'.format(int(slider.value))
        halign: "center"
        size_hint: 1, 1
        pos_hint: {"center_x": 0.15, "center_y": 0.85}

    Slider:
        id: slider_l
        min: -180
        max: 180
        value: 0
        hint: True
